@namespace Blazorise.AnnotatedImage
@inherits BaseComponent
@using System.Text
<div class="@ClassNames"
     style="@StyleNames"
     id="@ElementId"
     @ref="AnnotatedImageRef"
     @attributes="@Attributes">
    <img 
        @ref="imgRef" 
        src="@Source">
    </img>
    @foreach(var item in annotations.Values)
    {
        <ImageAnnotation 
            @ref="item.ImageAnnotation"
            ImageAnnotationData="@item.AnnotationData"
            CanvasRect="@CanvasRect"/>
    }
</div>


