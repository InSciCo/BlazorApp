@namespace Blazorise.AnnotatedImage
@inherits BaseComponent
@using System.Text
<div class="@ClassNames"
     style="@StyleNames"
     id="@ElementId"
     @ref="@ElementRef"
     @attributes="@Attributes">
    <img 
        @ref="backgroundImageRef" 
        src="@Source">
    </img>
    @foreach(var item in Annotations.Values.OrderBy(x => x.Order))
    {
        <ImageAnnotation 
            ElementId="@item.Id"
            ImageAnnotationData="@item"
            CanvasRect="@CanvasRect"/>
    }
</div>


